<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>BasicController</servlet-name>
    <servlet-class>controllers.BasicController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BasicController</servlet-name>
    <url-pattern>/basic/api</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RefeicaoController</servlet-name>
    <servlet-class>controllers.RefeicaoController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RefeicaoController</servlet-name>
    <url-pattern>/refeicao/api</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
